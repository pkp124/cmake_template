# ADS and AEDT Installation Paths
ADS_INSTALL_PATH=/opt/keysight/ads2023
AEDT_INSTALL_PATH=/opt/ansys/AnsysEM/v231/Linux64

# Python Paths
PYTHONPATH=${PYTHONPATH}:${ADS_INSTALL_PATH}/python

# ADS Configuration
ADS_LICENSE_SERVER=your_license_server@port
ADS_DEFAULT_WORKSPACE=/path/to/ads/workspace

# AEDT Configuration
AEDT_LICENSE_SERVER=your_license_server@port
AEDT_DEFAULT_PROJECT_PATH=/path/to/aedt/projects

# Simulation Settings
NUM_CORES=8
SIMULATION_TIMEOUT=3600

# Data Export Settings
EXPORT_FORMAT=touchstone
S_PARAM_POINTS=201
FREQ_START=0
FREQ_STOP=10e9

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/ads_testbench.log
